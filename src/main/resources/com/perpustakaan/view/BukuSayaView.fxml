<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane styleClass="content-area" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.perpustakaan.controller.BukuSayaController">
   <padding>
      <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
   </padding>
   <top>
      <VBox spacing="5.0" BorderPane.alignment="CENTER_LEFT">
         <children>
            <Label fx:id="welcomeLabel" styleClass="page-title" text="Buku Saya" />
            <Label fx:id="subtitleLabel" styleClass="page-subtitle" text="Berikut adalah daftar buku yang sedang Anda pinjam." />
         </children>
         <BorderPane.margin>
            <Insets bottom="20.0" />
         </BorderPane.margin>
      </VBox>
   </top>
   <center>
      <ListView fx:id="pinjamanListView" styleClass="peminjaman-list-view" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>