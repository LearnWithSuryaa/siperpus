<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?> <?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="rootBorderPane" styleClass="content-area" xmlns="http://javafx.com/javafx/21"
   xmlns:fx="http://javafx.com/fxml/1"
   fx:controller="com.perpustakaan.controller.KatalogBukuController">
   <padding>
      <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
   </padding>
   <top>
      <VBox spacing="15.0">
         <children>
            <Label styleClass="page-title" text="Katalog Buku" />
            <HBox fx:id="limitWarningBox" alignment="CENTER_LEFT" managed="false" spacing="15.0"
               styleClass="info-banner" visible="false">
               <children>
                  <FontAwesomeIconView glyphName="INFO_CIRCLE" size="2em"
                     styleClass="info-banner-icon" />
                  <Label
                     text="Anda telah mencapai batas maksimal peminjaman (3 buku). Anda tetap bisa melihat katalog."
                     wrapText="true" />
               </children>
            </HBox>
            <HBox spacing="10.0">
               <children>
                  <TextField fx:id="searchField" prefHeight="45.0"
                     promptText="Ketik untuk mencari..." styleClass="input-field"
                     HBox.hgrow="ALWAYS" />
                  <ChoiceBox fx:id="categoryFilterChoiceBox" prefHeight="45.0" prefWidth="200.0"
                     styleClass="input-field" />
                  <ChoiceBox fx:id="sortChoiceBox" prefHeight="45.0" prefWidth="180.0"
                     styleClass="input-field" />
               </children>
            </HBox>
         </children>
         <BorderPane.margin>
            <Insets bottom="20.0" />
         </BorderPane.margin>
      </VBox>
   </top>
   <center>
      <ScrollPane fitToWidth="true" styleClass="scroll-pane-pixel">
         <content>
            <TilePane fx:id="bookTilePane" hgap="20.0" vgap="20.0" />
         </content>
      </ScrollPane>
   </center>
   <right>
      <VBox fx:id="detailPanel" spacing="15.0" styleClass="form-container">
         <BorderPane.margin>
            <Insets left="25.0" />
         </BorderPane.margin>
         <children>
            <Label styleClass="form-title" text="Detail Peminjaman" />
            <GridPane hgap="10.0" vgap="10.0">
               <children>
                  <Label text="Judul:" />
                  <Label fx:id="titleLabel" style="-fx-font-weight: bold;" text="-" wrapText="true"
                     GridPane.columnIndex="1" />
                  <Label text="Penulis:" GridPane.rowIndex="1" />
                  <Label fx:id="authorLabel" style="-fx-font-weight: bold;" text="-"
                     GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <Label text="Durasi Pinjam:" GridPane.rowIndex="2" />
                  <ChoiceBox fx:id="durasiChoiceBox" maxWidth="1.7976931348623157E308"
                     styleClass="input-field" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <Label text="Jatuh Tempo:" GridPane.rowIndex="3" />
                  <Label fx:id="dueDateLabel" style="-fx-font-weight: bold;" text="-"
                     GridPane.columnIndex="1" GridPane.rowIndex="3" />
               </children>
            </GridPane>
            <Label styleClass="fine-info-label" text="*Denda keterlambatan: Rp 1.000 per hari."
               wrapText="true" />
            <Button fx:id="borrowButton" disable="true" mnemonicParsing="false"
               onAction="#handleBorrowButton" prefHeight="40.0" prefWidth="250.0"
               styleClass="add-button" text="Pinjam Buku Ini" />
         </children>
      </VBox>
   </right>
</BorderPane>